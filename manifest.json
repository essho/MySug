{
  "name": "تطبيق سكري",
  "short_name": "سكري",
  "id": "com.mysug.app",
  "description": "تطبيق لإدارة قياسات السكر والوجبات وجرعات الأنسولين.",
  "start_url": "./index.html",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#ffffff",
  "theme_color": "#28a745",
  "icons": [
    {
      "src": "./icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "./icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "display_override": ["window-controls-overlay", "edge_side_panel"],
  "screenshots": [
    {
      "src": "./screenshots/screenshot1.png",
      "sizes": "640x480",
      "type": "image/png"
    }
  ],
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/json": [".json"]
      }
    }
  ],
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "web+sug",
      "url": "/app?id=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    }
  }
}